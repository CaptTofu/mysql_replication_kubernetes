      "id": "pxc-node2",
      "containers": [{
        "name": "pxc-node2",
        "image": "capttofu/percona_xtradb_cluster_5_6",
        "cpu": 100,
        "env": [
	      {
		  "name": "GALERA_CLUSTER",
	          "value": "yes"
	      },
	      {
		  "name": "WSREP_SST_USER",
	          "value": "sst"
	      },
	      {
		  "name": "WSREP_SST_PASSWORD",
	          "value": "sst"
	      },
	      {
		  "name": "WSREP_CLUSTER_ADDRESS",
